@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Let's Shop</h1>

<div class="container">
    <div class="row">
        <!-- Product Box 1 -->
        <div class="col-md-4">
            <div class="product-box">
                <img src="product1.jpg" alt="Product 1" style="width: 100%;">
                <h3>Product 1</h3>
                <p>Stock Quantity: 10</p>
                <p>Price: $10.00</p>
                <p>Weight: 1 lb</p>
                <button>Add to Cart</button>
            </div>
        </div>

        <!-- Product Box 2 -->
        <div class="col-md-4">
            <div class="product-box">
                <img src="product2.jpg" alt="Product 2" style="width: 100%;">
                <h3>Product 2</h3>
                <p>Stock Quantity: 15</p>
                <p>Price: $15.00</p>
                <p>Weight: 2 lb</p>
                <button>Add to Cart</button>
            </div>
        </div>

        <!-- Product Box 3 -->
        <div class="col-md-4">
            <div class="product-box">
                <img src="product3.jpg" alt="Product 3" style="width: 100%;">
                <h3>Product 3</h3>
                <p>Stock Quantity: 20</p>
                <p>Price: $20.00</p>
                <p>Weight: 3 lb</p>
                <button>Add to Cart</button>
            </div>
        </div>
    </div>
</div>

<style>
    .product-box {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
    }
</style>
