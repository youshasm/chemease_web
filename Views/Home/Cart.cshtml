@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Your Cart</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3>Items in Your Cart</h3>
            <!-- Display the items added to the cart -->
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Product Name</h5>
                    <p class="card-text">Price: $10</p>
                    <p class="card-text">Quantity: 2</p>
                    <!-- Add more details like image, quantity, price, etc. -->
                </div>
            </div>
            <!-- Repeat the above card structure for each item in the cart -->
        </div>
        <div class="col-md-4">
            <h3>Checkout</h3>
            <!-- Checkout form -->
            <form>
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Enter your full name">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Enter your address">
                </div>
                <div class="form-group">
                    <label for="cardNumber">Credit Card Number</label>
                    <input type="text" class="form-control" id="cardNumber" placeholder="Enter your credit card number">
                </div>
                <!-- Add more input fields as needed -->
                <button type="submit" class="btn btn-primary">Place Order</button>
            </form>
        </div>
    </div>
</div>
